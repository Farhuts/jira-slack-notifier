
# Base URL for your Jira instance (e.g., https://gramhub.atlassian.net)
JIRA_BASE_URL=https://your-jira-instance.atlassian.net

# Email associated with your Jira account
JIRA_EMAIL=your-email@example.com

# Jira API Token (Generate from https://id.atlassian.com/manage-profile/security/api-tokens)
JIRA_API_TOKEN=your-jira-api-token

# Jira Project Key (e.g., GRH-1)
JIRA_PROJECT_KEY=YOUR_PROJECT_KEY

# Slack Bot Token (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Cron expression for scheduling the notifier (e.g., "0 9 * * *" for daily at 9:00 AM)
SCHEDULE_CRON=0 9 * * *
